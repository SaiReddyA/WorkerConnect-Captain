@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic Meta Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- SEO Meta Tags -->
    <meta name="description" content="SR HomeServices Captain - Professional home services platform" />
    <meta name="keywords" content="Home Services, Cleaning, Plumbing, Electrical, Repairs, SR HomeServices" />
    <meta name="author" content="SR HomeServices Team" />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Social Media -->
    <meta property="og:title" content="SR HomeServices Captain" />
    <meta property="og:description" content="Professional home services platform for cleaning, plumbing, electrical, and more." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.srhomeservices.com/" />
    <meta property="og:image" content="https://www.srhomeservices.com/images/og-image.png" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/favicon.png" />

    <title>@ViewData["Title"] - SR_HomeServices_Captain</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">SR HomeServices</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            var userName = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email)?.Value ?? "User";

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> @userName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center"
                                           asp-area=""
                                           asp-controller="Profile"
                                           asp-action="Index">
                                            <i class="bi bi-person-circle me-2"></i>
                                            My Profile
                                        </a>
                                    </li>

                                    <li><hr class="dropdown-divider"></li>

                                    <li>
                                        <form asp-area=""
                                              asp-controller="Auth"
                                              asp-action="Logout"
                                              method="post"
                                              class="px-3 py-1">
                                            <button class="btn btn-link text-dark p-0 m-0 d-flex align-items-center"
                                                    type="submit">
                                                <i class="bi bi-box-arrow-right me-2"></i>
                                                Logout
                                            </button>
                                        </form>
                                    </li>

                                </ul>

                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Index">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main content -->
    <main class="container py-4 flex-grow-1">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-primary text-white py-4 mt-auto">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <span>&copy; 2025 SR HomeServices. All rights reserved.</span>
            <ul class="list-unstyled d-flex mb-0">
                <li class="ms-3"><a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                <li class="ms-3"><a class="text-white text-decoration-none" asp-area="" asp-controller="Home" asp-action="Terms">Terms</a></li>
            </ul>
        </div>
    </footer>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

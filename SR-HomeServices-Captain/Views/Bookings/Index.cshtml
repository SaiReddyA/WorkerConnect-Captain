@model BookingDashboardVm
@{
    ViewData["Title"] = "Bookings Dashboard";
}

<div class="container-fluid py-4">

    <!-- ===== WELCOME BANNER ===== -->
    <div class="card mb-4 text-white"
         style="background: linear-gradient(90deg,#2563eb,#3b82f6); border-radius:12px;">
        <div class="card-body">
            <h4 class="fw-bold mb-1">Welcome back, John!</h4>
            <p class="mb-0">
                You have <strong>@Model.Pending.Count</strong> pending requests
            </p>
        </div>
    </div>

    <!-- ===== STATS CARDS ===== -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-exclamation-circle text-warning fs-3"></i>
                    <h3 class="fw-bold mt-2">@Model.Pending.Count</h3>
                    <div class="text-muted">Pending</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-clock text-primary fs-3"></i>
                    <h3 class="fw-bold mt-2">@Model.InProgress.Count</h3>
                    <div class="text-muted">In Progress</div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-check-circle text-success fs-3"></i>
                    <h3 class="fw-bold mt-2">@Model.Completed.Count</h3>
                    <div class="text-muted">Completed</div>
                </div>
            </div>
        </div>
    </div>

    <!-- ===== PENDING REQUESTS ===== -->
    <h5 class="fw-bold mb-3">
        <i class="bi bi-exclamation-circle text-warning me-1"></i>
        Pending Requests (@Model.Pending.Count)
    </h5>
    <!-- Pending -->
    @Html.Partial("_GetPendingRequests.cshtml", Model.Pending)


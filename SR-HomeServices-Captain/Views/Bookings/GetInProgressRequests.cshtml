@model List<BookingItemVm>

@if (!Model.Any())
{
    <div class="text-center text-muted py-4">
        <i class="bi bi-file-earmark-minus fs-2"></i><br />
        No in-progress bookings found.
    </div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="card mb-3 shadow-sm border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h5 class="card-title">@item.SkillName</h5>
                    <small class="text-info">@item.CreatedDate.ToString("dd MMM yyyy")</small>
                </div>
                <p class="card-text">@item.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="text-secondary">
                        <i class="bi bi-person-circle"></i> @item.CustomerName
                    </span>
                    <span class="text-secondary">
                        <i class="bi bi-geo-alt"></i> @item.ServiceAddress
                    </span>
                </div>
            </div>
        </div>
    }
}

@model ProfileViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold mb-0">My Profile</h3>
        <small class="text-muted">Manage your personal and professional details</small>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-1"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div id="profileView" @(Model.HasProfile ? "" : "style=display:none")>

    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between">
            <span>My Profile</span>
            <button type="button"
                    class="btn btn-sm btn-outline-primary"
                    onclick="showEdit()">
                <i class="bi bi-pencil"></i> Edit
            </button>
        </div>

        <div class="card-body">
            <p><strong>Name:</strong> @Model.FullName</p>
            <p><strong>Address:</strong> @Model.AddressLine, @Model.City</p>
            <p><strong>Pincode:</strong> @Model.Pincode</p>

            <p>
                <strong>Skills:</strong>
                @string.Join(", ", Model.Skills.Where(s => s.IsSelected)
                                .Select(s => s.SkillName))
            </p>
        </div>
    </div>
</div>
<div id="profileForm" @(Model.HasProfile ? "style=display:none" : "")>
    <form asp-action="Save" method="post">

        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="ProfileId" />
        <input type="hidden" asp-for="AddressId" />

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white fw-semibold">
                <i class="bi bi-person-circle me-1"></i> Personal Information
            </div>

            <div class="card-body">
                <div class="row g-3">

                    <div class="col-md-6">
                        <label class="form-label">Full Name</label>
                        <input asp-for="FullName"
                               class="form-control"
                               placeholder="Enter full name"
                               value="@Model?.FullName " />
                    </div>

                </div>
            </div>
        </div>
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white fw-semibold">
                <i class="bi bi-geo-alt me-1"></i> Address Details
            </div>

            <div class="card-body">
                <div class="row g-3">

                    <div class="col-md-12">
                        <label class="form-label">Address Line</label>
                        <input asp-for="AddressLine"
                               class="form-control"
                               placeholder="House no, street"
                               value="@Model?.AddressLine " />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">City</label>
                        <input asp-for="City"
                               class="form-control"
                               value="@Model?.City " />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Area</label>
                        <input asp-for="Area"
                               class="form-control"
                               value="@Model?.Area " />
                    </div>

                    <div class="col-md-4">
                        <label class="form-label">Pincode</label>
                        <input asp-for="Pincode"
                               class="form-control"
                               value="@Model?.Pincode " />
                    </div>

                </div>
            </div>
        </div>
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-white fw-semibold">
                <i class="bi bi-tools me-1"></i> Skills
            </div>

            <div class="card-body">

                @if (Model?.Skills != null && Model.Skills.Any())
                {
                    <div class="row">
                        @for (int i = 0; i < Model.Skills.Count; i++)
                        {
                            <div class="col-md-3 col-sm-6 mb-3">
                                <div class="border rounded p-2 d-flex align-items-center justify-content-between">

                                    <div>
                                        <input type="hidden" asp-for="Skills[@i].SkillId" />
                                        <input type="hidden" asp-for="Skills[@i].SkillName" />

                                        <input class="form-check-input me-2"
                                               type="checkbox"
                                               asp-for="Skills[@i].IsSelected" />

                                        <span class="fw-medium">
                                            @Model.Skills[i].SkillName
                                        </span>
                                    </div>

                                    @if (Model.Skills[i].IsVerified)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-patch-check"></i>
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No skills found.</p>
                }

            </div>
        </div>
        <div class="d-flex justify-content-end gap-2">
            @if (Model.HasProfile)
            {
                <button type="button"
                        class="btn btn-secondary"
                        onclick="showView()">
                    Cancel
                </button>
            }

            <button type="submit" class="btn btn-primary">
                Save Profile
            </button>
        </div>

    </form>
</div>

<script>
    function showEdit() {
        document.getElementById("profileView").style.display = "none";
        document.getElementById("profileForm").style.display = "block";
    }

    function showView() {
        document.getElementById("profileForm").style.display = "none";
        document.getElementById("profileView").style.display = "block";
    }
</script>
